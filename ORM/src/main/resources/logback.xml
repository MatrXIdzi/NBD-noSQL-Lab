<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %class{0}: %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="org.mongodb.driver" level="WARN" additivity="true"/>
    <logger name="redis.clients.jedis" level="INFO" additivity="true"/>
    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>